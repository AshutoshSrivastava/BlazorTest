@page "/posts"

<h1>Consume - GraphQL Api</h1>

<p>This Data(Posts) Fetched from https://graphqlzero.almansi.me/ </p>
<i>https://graphqlzero.almansi.me/api/</i>

@if (postsData == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped table-bordered ">
        <thead class="thead-dark ">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in postsData)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@post.Body</td>
                </tr>
            }
        </tbody>
    </table>
}

